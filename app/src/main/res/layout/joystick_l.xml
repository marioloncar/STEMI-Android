<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivJoystickLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/joystick_path_l" />

    <ImageView
        android:id="@+id/ivJoystickLeft_Left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:scaleType="fitCenter"
        android:src="@drawable/joystick_path_l_l" />

    <ImageView
        android:id="@+id/ivJoystickLeft_Right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:scaleType="fitCenter"
        android:src="@drawable/joystick_path_l_r" />

    <ImageView
        android:id="@+id/ivJoystickLeft_Down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:scaleType="fitCenter"
        android:src="@drawable/joystick_path_l_down" />

    <ImageView
        android:id="@+id/ivJoystickLeft_Up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:scaleType="fitCenter"
        android:src="@drawable/joystick_path_l_up" />

</merge>