<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivJoystickRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/joy_path_r" />

    <ImageView
        android:id="@+id/ivJoystickRight_Left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:scaleType="fitCenter"
        android:src="@drawable/joy_path_r_l" />

    <ImageView
        android:id="@+id/ivJoystickRight_Right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:scaleType="fitCenter"
        android:src="@drawable/joy_path_r_r" />

</merge>