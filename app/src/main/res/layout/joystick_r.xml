<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivJoystick_r"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/joystick_path_r" />

    <ImageView
        android:id="@+id/ivJoystick_r_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:scaleType="fitCenter"
        android:src="@drawable/joystick_path_r_l" />

    <ImageView
        android:id="@+id/ivJoystick_r_r"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:scaleType="fitCenter"
        android:src="@drawable/joystick_path_r_r" />

</merge>