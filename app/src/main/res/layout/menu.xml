<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rlMenu"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|center_horizontal">

        <ImageView
            android:id="@+id/ivBck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/menu_bck"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_icon" />

        <ImageView
            android:id="@+id/ivMenuActive"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_icon_active"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bMenu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_selector" />

        <ImageButton
            android:id="@+id/ibMovement"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ivMenuActive"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/movement_selector"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ibRotation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/ivMenu"
            android:layout_toEndOf="@+id/ibMovement"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/rotation_selector"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ibOrientation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/ibHeight"
            android:layout_marginTop="17dp"
            android:layout_toStartOf="@+id/bMenu"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/orientation_selector"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ibHeight"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/height_selector"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ibCalibration"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/ibOrientation"
            android:layout_toEndOf="@+id/ivMenuActive"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/calibration_selector"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ibWalkingStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/ivMenu"
            android:layout_toStartOf="@+id/ibSettings"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/styles_selector"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ibSettings"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ivMenuActive"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="31dp"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/settings_selector"
            android:visibility="invisible" />

    </RelativeLayout>
</merge>