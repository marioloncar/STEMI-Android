<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlToastLongRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivToastLongBck"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/hint" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/ivToastLongBck"
        android:layout_alignTop="@+id/ivToastLongBck"
        android:gravity="center"
        android:text="PROBNI"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/line"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/ivToastLongBck"
        android:layout_centerHorizontal="true"
        android:text="OVDJE CE BITI OPIS LABEL-A"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="12sp" />
</RelativeLayout>
