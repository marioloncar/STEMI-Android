<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlToastLongRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivToastLongBck"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/hint" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/ivToastLongBck"
        android:layout_alignTop="@+id/ivToastLongBck"
        android:gravity="center"
        android:text="PROBNI"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/highlightColor"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/ivToastLongBck"
        android:layout_centerHorizontal="true"
        android:text="OVO JE TEKST KOJI CE SE PRIKAZATI KAO OPIS OVO MALOG LABELA!"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/highlightColor"
        android:textSize="18sp" />
</RelativeLayout>
